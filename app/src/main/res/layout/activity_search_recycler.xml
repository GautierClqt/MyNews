<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_articles_search_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkSecondaryColor"

    android:orientation="vertical"
    tools:context=".controllers.Activities.ArticlesSearch">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_articles_search_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:visibility="gone"/>

    <TextView
        android:id="@+id/activity_articles_search_failEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        tools:text="@string/error_failure" />

    <Button
        android:id="@+id/activity_articles_search_refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_articles_search_failEditText"
        android:text="@string/refresh_request_button" />

</RelativeLayout>