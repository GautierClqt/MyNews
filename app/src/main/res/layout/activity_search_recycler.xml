<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_articles_search_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCCCCC"

    android:orientation="vertical"
    tools:context=".controllers.Activities.ArticlesSearch">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_articles_search_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:visibility="gone"/>

    <ImageView
        android:id="@+id/activity_articles_search_imagelogo"
        android:layout_width="354dp"
        android:layout_height="576dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ic_nytlogo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/activity_articles_search_failEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        tools:text="@string/error_failure" />

</RelativeLayout>